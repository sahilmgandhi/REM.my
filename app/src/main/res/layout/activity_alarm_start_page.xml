<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context="com.sahilmgandhi.remmy.AlarmStartPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/topBar"
        android:textSize="25sp"
        android:textIsSelectable="false"
        android:text="@string/titleBarText"
        android:gravity="center"
        android:textColor="@color/backGround"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:text=""
        android:id="@+id/Instructions"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="435dp"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_menu_add"
            app:backgroundTint="@color/addFabColor"
            android:id="@+id/floatingActionButton1" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="false"
            app:fabSize="normal"
            android:layout_marginLeft="15dp"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:backgroundTint="@color/trashBackground"
            android:id="@+id/floatingActionButton2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initAlarmText"
        android:id="@+id/alarmStatus"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="false"
        android:textSize="80sp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>